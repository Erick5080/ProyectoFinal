<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ElectroTech</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow">
        <div class="container">
            @* LOGO DINÁMICO: Admin va al Dashboard, Usuario al Home *@
            @if (Session["AdminID"] != null)
            {
                <a href="@Url.Action("Index", "Administracion")" class="navbar-brand fw-bold text-info">ElectroTech Admin</a>
            }
            else
            {
                <a href="@Url.Action("Index", "Home")" class="navbar-brand fw-bold">ElectroTech DS4</a>
            }

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })</li>

                    @* MENÚ DE GESTIÓN (SOLO ADMIN) *@
                    @if (Session["AdminID"] != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-warning fw-bold" href="#" id="navGestion" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-cogs"></i> Gestión
                            </a>
                            <ul class="dropdown-menu shadow">
                                <li><a class="dropdown-item" href="@Url.Action("Productos", "Administracion")"><i class="fas fa-box"></i> Productos</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Proveedores", "Administracion")"><i class="fas fa-truck"></i> Proveedores</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("VerOrdenes", "Administracion")"><i class="fas fa-file-invoice"></i> Ver Órdenes</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav">
                    @* CARRITO *@
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-info me-2" href="@Url.Action("Index", "Carrito")">
                            🛒 <span id="contador-carrito" class="badge bg-danger">0</span>
                        </a>
                    </li>

                    @* LÓGICA DE LOGIN / LOGOUT UNIFICADA *@
                    @if (Session["AdminID"] == null && Session["UsuarioID"] == null)
                    {
                        @* NADIE LOGUEADO *@
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary px-3" href="@Url.Action("Index", "Login")">
                                <i class="fas fa-user"></i> Iniciar Sesión
                            </a>
                        </li>
                    }
                    else
                    {
                        @* ALGUIEN LOGUEADO (ADMIN O USUARIO) *@
                        <li class="nav-item dropdown">
                            <a class="nav-link btn btn-outline-light dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle"></i>
                                Hola, @(Session["AdminNombre"] ?? Session["UsuarioNombre"] ?? "Usuario")
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow">
                                @if (Session["AdminID"] != null)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Administracion")">Panel de Control</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("MisOrdenes", "Home")">Mis Pedidos</a></li>
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger fw-bold" href="@Url.Action("Logout", "Administracion")">
                                        <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <style>
        body {
            padding-top: 80px;
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-size: 1.4rem;
            letter-spacing: 0.5px;
        }

        .dropdown-menu-end {
            right: 0;
            left: auto;
        }

        .dropdown-item {
            padding: 10px 20px;
        }
    </style>

    <div class="container body-content" style="min-height: 80vh;">
        @RenderBody()
    </div>

    <hr />
    <footer class="text-center pb-4">
        <p>&copy; @DateTime.Now.Year - ElectroTech DS4 - Todos los derechos reservados</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>