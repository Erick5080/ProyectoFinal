<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow">
        <div class="container">
            @Html.ActionLink("ElectroTech DS4", "Index", "Home", new { area = "" }, new { @class = "navbar-brand fw-bold" })

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })</li>

                    <li class="nav-item dropdown" id="nav-gestion" style="display: none;">
                        <a class="nav-link dropdown-toggle text-white" href="#" data-bs-toggle="dropdown">⚙️ Gestión</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Productos", "Administracion")">Productos</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Proveedores", "Administracion")">Proveedores</a></li>
                        </ul>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-info me-2" href="@Url.Action("Index", "Carrito")">
                            🛒 <span id="contador-carrito" class="badge bg-danger">0</span>
                        </a>
                    </li>
                    <li class="nav-item" id="seccion-usuario">
                        <a class="nav-link btn btn-primary" href="@Url.Action("Index", "Login")">👤 Iniciar Sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <style>
        body {
            padding-top: 70px;
            background-color: #f8f9fa;
        }

        .product-card {
            transition: transform 0.2s;
        }

            .product-card:hover {
                transform: scale(1.03);
            }
    </style>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/main.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
