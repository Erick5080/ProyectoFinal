<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ElectroTech</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow">
        <div class="container">
            @* EL LOGO REGRESA AL DASHBOARD SI ES ADMIN, SI NO AL HOME *@
            @if (Session["AdminID"] != null)
            {
                <a href="@Url.Action("Index", "Administracion")" class="navbar-brand fw-bold">ElectroTech DS4</a>
            }
            else
            {
                <a href="@Url.Action("Index", "Home")" class="navbar-brand fw-bold">ElectroTech DS4</a>
            }

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })</li>

                    @* MUESTRA LA GESTIÓN SOLO SI EL ADMIN ESTÁ LOGUEADO *@
                    @if (Session["AdminID"] != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-warning fw-bold" href="#" id="navGestion" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-cogs"></i> Gestión
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Administracion")"><i class="fas fa-chart-line"></i> Panel Principal</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Productos", "Administracion")"><i class="fas fa-box"></i> Productos</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Proveedores", "Administracion")"><i class="fas fa-truck"></i> Proveedores</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("VerOrdenes", "Administracion")"><i class="fas fa-file-invoice"></i> Ver Órdenes</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav">
                    @* CARRITO SIEMPRE VISIBLE O SEGÚN TU PREFERENCIA *@
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-info me-2" href="@Url.Action("Index", "Carrito")">
                            🛒 <span id="contador-carrito" class="badge bg-danger">0</span>
                        </a>
                    </li>

                    @* LÓGICA DE LOGIN / LOGOUT *@
                    @if (Session["AdminID"] == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary px-3" href="@Url.Action("Index", "Login")">
                                <i class="fas fa-user"></i> Iniciar Sesión
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link btn btn-outline-light dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="fas fa-user-shield"></i> Hola, @Session["AdminNombre"]
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Administracion")"><i class="fas fa-tachometer-alt"></i> Panel de Control</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="@Url.Action("Logout", "Administracion")"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <style>
        body {
            padding-top: 80px;
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-size: 1.5rem;
            letter-spacing: 1px;
        }

        .dropdown-menu-end {
            right: 0;
            left: auto;
        }

        /* Efecto hover suave en dropdowns */
        .dropdown-item:hover {
            background-color: #f1f1f1;
        }
    </style>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center pb-4">
            <p>&copy; @DateTime.Now.Year - ElectroTech DS4 - Panel Administrativo</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>