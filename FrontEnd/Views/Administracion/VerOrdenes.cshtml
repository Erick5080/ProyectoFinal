@model FrontEnd.Models.OrdenDetallesViewModel

@{
    ViewBag.Title = "Detalles de la Orden";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-search-dollar"></i> Detalle de Orden #@Model.Orden["OrdenID"]</h2>
        @Html.ActionLink("Volver a Órdenes", "VerOrdenes", null, new { @class = "btn btn-secondary" })
    </div>

    <div class="row">
        @* Panel de Información General *@
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-dark text-white">Información de la Orden</div>
                <div class="card-body">
                    <p><strong>Fecha:</strong> @Convert.ToDateTime(Model.Orden["FechaOrden"]).ToString("f")</p>
                    <p><strong>Cliente ID:</strong> @(Model.Orden["ClienteID"] ?? "N/A")</p>
                    <hr />
                    <h4 class="text-success text-center">Total: $@Convert.ToDecimal(Model.Orden["Total"]).ToString("N2")</h4>
                </div>
            </div>
        </div>

        @* Tabla de Productos Comprados *@
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">Productos Incluidos</div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th class="text-center">Cantidad</th>
                                <th class="text-end">Precio Unit.</th>
                                <th class="text-end">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detalle in Model.Detalles)
                            {
                                <tr>
                                    <td>@detalle.NombreProducto</td>
                                    <td class="text-center">@detalle.Cantidad</td>
                                    <td class="text-end">$@detalle.PrecioUnitario.ToString("N2")</td>
                                    <td class="text-end fw-bold">$@((detalle.Cantidad * detalle.PrecioUnitario).ToString("N2"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>