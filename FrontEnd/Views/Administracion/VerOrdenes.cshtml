@model List<Dictionary<string, object>>

@{
    ViewBag.Title = "Órdenes de Compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4"><i class="fas fa-file-invoice"></i> @ViewBag.Message</h2>
    <hr />

    @if (ViewBag.InfoMessage != null)
    {
        <div class="alert alert-info">
            @ViewBag.InfoMessage
        </div>
    }

    <div class="d-flex justify-content-between mb-3">
        @Html.ActionLink("Volver al Panel", "Index", "Administracion", null, new { @class = "btn btn-secondary" })
        <button class="btn btn-success" onclick="window.location.reload()">
            <i class="fas fa-sync-alt"></i> Actualizar
        </button>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-lg">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Orden ID</th>
                                <th>Cliente ID</th>
                                <th>Fecha de Orden</th>
                                <th>Total</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var orden in Model)
                            {
                                <tr>
                                    <td>@orden["OrdenID"]</td>
                                    <td>
                                        @if (orden.ContainsKey("ClienteID") && orden["ClienteID"] != null && orden["ClienteID"] is int clienteId)
                                        {
                                            <span>@clienteId</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Invitado</span>
                                        }
                                    </td>
                                    <td>
                                        @if (orden.ContainsKey("FechaOrden") && orden["FechaOrden"] != null)
                                        {
                                            // Asumiendo que es DateTime o string que se puede parsear
                                            <span>@Convert.ToDateTime(orden["FechaOrden"]).ToString("yyyy-MM-dd HH:mm")</span>
                                        }
                                    </td>
                                    <td>
                                        @if (orden.ContainsKey("Total") && orden["Total"] != null)
                                        {
                                            <span>$@Convert.ToDecimal(orden["Total"]).ToString("N2")</span>
                                        }
                                    </td>
                                    <td>
                                        {{-- Aquí podrías tener un botón para ver los detalles de la orden --}}
                                        <button class="btn btn-info btn-sm" disabled>Ver Detalles</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    @* Si el modelo es nulo O la lista está vacía *@
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center">
            @* Accedemos al ModelState a través de ViewData para evitar el error de compilación *@
            @if (ViewData.ModelState.IsValid)
            {
                <p>No se encontraron órdenes. ¡Es hora de que los clientes empiecen a comprar!</p>
            }
            else
            {
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            }
        </div>
    }
</div>