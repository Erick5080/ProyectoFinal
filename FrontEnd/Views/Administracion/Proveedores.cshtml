@model List<FrontEnd.Models.ProveedorViewModel>

@{
    ViewBag.Title = "Gestión de Proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2><i class="fas fa-truck"></i> @ViewBag.Title</h2>
    <hr />

    <p>
        <a href="@Url.Action("CrearProveedor", "Administracion")" class="btn btn-success">
            <i class="fas fa-plus"></i> Crear Nuevo Proveedor
        </a>
    </p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <table class="table table-striped table-hover mt-3">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.First().ContactoNombre)</th>
                <th>@Html.DisplayNameFor(model => model.First().Telefono)</th>
                <th>@Html.DisplayNameFor(model => model.First().Activo)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.ContactoNombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                    <td>@(item.Activo ? "Sí" : "No")</td>
                    <td>
                        <a href="@Url.Action("EditarProveedor", "Administracion", new { id = item.ProveedorID })" class="btn btn-sm btn-info text-white">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a href="@Url.Action("EliminarProveedor", "Administracion", new { id = item.ProveedorID })" class="btn btn-sm btn-danger" onclick="return confirm('¿Está seguro de que desea eliminar a este proveedor?');">
                            <i class="fas fa-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>