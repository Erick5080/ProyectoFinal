<table class="table table-striped table-hover mt-3">
    <thead class="table-dark">
        <tr>
            @* Forma segura de mostrar nombres sin depender de si hay datos en la lista *@
            <th>Nombre</th>
            <th>Contacto</th>
            <th>Teléfono</th>
            <th>Estado</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">No hay proveedores registrados.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.ContactoNombre</td>
                    <td>@item.Telefono</td>
                    <td>
                        <span class="badge @(item.Activo ? "bg-success" : "bg-secondary")">
                            @(item.Activo ? "Activo" : "Inactivo")
                        </span>
                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("EditarProveedor", "Administracion", new { id = item.ProveedorID })" class="btn btn-sm btn-info text-white">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="@Url.Action("EliminarProveedor", "Administracion", new { id = item.ProveedorID })"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('¿Eliminar proveedor @item.Nombre?');">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>