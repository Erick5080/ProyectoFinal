@model List<FrontEnd.Models.Producto>

@{
    ViewBag.Title = "Panel de Administración";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4"><i class="fas fa-tools"></i> Gestión de Productos</h2>
    <hr />

    @* Muestra mensajes de éxito del controlador (ej. después de registrar un producto) *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* Botón para registrar un nuevo producto *@
    <div class="d-flex justify-content-end mb-3">
        @Html.ActionLink("Registrar Nuevo Producto", "RegistrarProducto", "Administracion", null, new { @class = "btn btn-primary btn-lg" })
    </div>

    @* Tabla de listado de productos *@
    <div class="card shadow-lg">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle" id="tabla-productos">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Stock</th>
                            <th>Fecha Registro</th>
                            <th>Activo</th>
                            <th style="width: 20%;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ProductoID</td>
                                    <td>@item.Nombre</td>
                                    <td>$@item.PrecioUnitario.ToString("N2")</td>
                                    <td>
                                        @if (item.Stock == 0)
                                        {
                                            <span class="badge bg-danger">Agotado</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@item.Stock</span>
                                        }
                                    </td>
                                    <td>@item.FechaRegistro.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @(item.Activo ? "Sí" : "No")
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "EditarProducto", new { id = item.ProductoID }, new { @class = "btn btn-warning btn-sm me-2" })

                                        @* Botón de Eliminación (Lógica de Desactivar) *@
                                        <button class="btn btn-danger btn-sm" onclick="desactivarProducto(@item.ProductoID, '@item.Nombre')">
                                            Desactivar
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">No hay productos registrados o hubo un error de conexión con la API.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/administracion.js"></script>
}