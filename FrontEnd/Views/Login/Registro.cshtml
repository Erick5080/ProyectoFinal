@model FrontEnd.Models.Usuario

@{
    ViewBag.Title = "Registro de Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0">Crear Nueva Cuenta</h4>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm("ProcesarRegistro", "Login", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label fw-bold">Nombre Completo</label>
                            @Html.TextBoxFor(m => m.NombreCompleto, new { @class = "form-control", required = "required" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Correo Electrónico</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", required = "required" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Contraseña</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success">Registrarse</button>
                            <a href="@Url.Action("Index", "Login")" class="btn btn-link">Volver al Login</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>