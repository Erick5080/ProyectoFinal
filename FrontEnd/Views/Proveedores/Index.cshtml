@model List<FrontEnd.Models.Proveedor>

@{
    ViewBag.Title = "Gestión de Proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    {{-- ... Contenido HTML de la tabla ... --}}

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-lg">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Contacto</th>
                                <th>Teléfono</th>
                                <th>Email</th>
                                <th style="width: 15%;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ProveedorID</td>
                                    <td>@item.Nombre</td>
                                    <td>@item.ContactoNombre</td>
                                    <td>@item.Telefono</td>
                                    <td>@item.Email</td>
                                    <td>
                                        @Html.ActionLink("Editar", "Editar", new { id = item.ProveedorID }, new { @class = "btn btn-warning btn-sm me-2" })
                                        <button class="btn btn-danger btn-sm" onclick="eliminarProveedor(@item.ProveedorID, '@item.Nombre')">
                                            Eliminar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            @ViewBag.InfoMessage
        </div>
    }
</div>

@section Scripts {
    <script src="~/Scripts/proveedores.js"></script>
}